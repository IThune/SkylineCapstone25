{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Skyline Capstone Deployment Template",
            "steps": [
                {
                    "name": "options",
                    "label": "Options",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "location": {
                                "resourceTypes": [
                                    "microsoft.resources/resourcegroups"
                                ]
                            }
                        },
                        {
                            "name": "location",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Location",
                            "subLabel": "",
                            "defaultValue": "[[resourceGroup().location]",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": "",
                                "validations": []
                            },
                            "infoMessages": [],
                            "visible": true
                        },
                        
                        {
                            "name": "OPNsenseBootstrapURI",
                            "type": "Microsoft.Common.TextBox",
                            "label": "OPNsense Bootstrap URI",
                            "subLabel": "",
                            "defaultValue": "",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": "",
                                "validations": []
                            },
                            "infoMessages": [],
                            "visible": true
                        },
                        {
                            "name": "OPNsenseBootstrapScriptName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "OPNsense Bootstrap Script Name",
                            "subLabel": "",
                            "defaultValue": "configure-opnsense.sh",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": "",
                                "validations": []
                            },
                            "infoMessages": [],
                            "visible": true
                        },
                        {
                            "name": "OPNsenseVersion",
                            "type": "Microsoft.Common.TextBox",
                            "label": "OPNsense Version",
                            "subLabel": "",
                            "defaultValue": "25.1",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": "",
                                "validations": []
                            },
                            "infoMessages": [],
                            "visible": true
                        },
                        {
                            "name": "WALinuxVersion",
                            "type": "Microsoft.Common.TextBox",
                            "label": "WA Linux Version",
                            "subLabel": "",
                            "defaultValue": "2.12.0.4",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": "",
                                "validations": []
                            },
                            "infoMessages": [],
                            "visible": true
                        },
                        {
                            "name": "AdminPassword",
                            "type": "Microsoft.Common.PasswordBox",
                            "label": {
                                "password": "Admin Password",
                                "confirmPassword": "Confirm password"
                            },
                            "defaultValue": "",
                            "toolTip": "",
                            "constraints": {
                                "required": true,
                                "regex": "",
                                "validationMessage": "",
                                "validations": []
                            },
                            "options": {
                                "hideConfirmation": true
                            },
                            "visible": true
                        },
                        {
                            "name": "GithubPrivateToken",
                            "type": "Microsoft.Common.PasswordBox",
                            "label": {
                                "password": "Github Repo Key",
                                "confirmPassword": "Confirm password"
                            },
                            "defaultValue": "",
                            "toolTip": "",
                            "constraints": {
                                "required": true,
                                "regex": "",
                                "validationMessage": "",
                                "validations": []
                            },
                            "options": {
                                "hideConfirmation": true
                            },
                            "visible": true
                        }
                    ]
                }
			]
		},
        "outputs": {
            "kind": "ResourceGroup",
            "location": "[steps('options').resourceScope.location.name]",
            "resourceGroupId": "[steps('options').resourceScope.resourceGroup.id]",
            "parameters": {
                "location": "[steps('options').location]",
                "OPNsenseBootstrapURI": "[steps('options').OPNsenseBootstrapURI]",
                "OPNsenseBootstrapScriptName": "[steps('options').OPNsenseBootstrapScriptName]",
                "AdminPassword": "[steps('options').AdminPassword]",
                "GithubPrivateToken": "[steps('options').GithubPrivateToken]"

            }
        }
    }
}